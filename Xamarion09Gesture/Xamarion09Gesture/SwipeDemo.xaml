<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamarion09Gesture.SwipeDemo">
    <StackLayout>

        <Label x:Name="lblswipe" 
               BackgroundColor="Purple"  
               Text="Hacer un Tap en la barra de color morado para cambiar de imagen" 
               TextColor="White" 
               HeightRequest="100" />

        <Image x:Name="image1" 
               Source="swipe.jpg" 
               HorizontalOptions="Center" 
               VerticalOptions="CenterAndExpand"/>

        <Label x:Name="lblswipe2" 
               BackgroundColor="Red"  
               Text="Hacer un Swipe en la barra de color rojo para cambiar de imagen" 
               TextColor="White" 
               HeightRequest="100" />

        <Image x:Name="image2" 
               Source="swipe2.jpg" 
               HorizontalOptions="Center" 
               VerticalOptions="CenterAndExpand"/>

    </StackLayout>
</ContentPage>